{
  "manifest_version": 3,
  "name": "Shorts Skipper",
  "version": "1.1",
  "description": "Automatically go to the next YouTube Shorts video when one ends.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Shorts Auto Next"
  },
  "permissions": ["scripting", "tabs"],
    "host_permissions": [
    "https://youtube.com/*",
    "https://*.youtube.com/*",
    "https://instagram.com/*",
    "https://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
